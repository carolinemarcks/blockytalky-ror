<div class="row-fluid">
    <div class="span7 offset5">
        <h2>Welcome, <%= current_user.name %>!</h2>
    </div>
</div>
<div class="row-fluid">
    <div class="span6 offset2">
        <ul class="nav nav-pills">
            <li class="active">
                <a href="#tabhome" data-toggle="tab">Home</a>
            </li>
            <li>
                <a href="#tabbtu" data-toggle="tab">BTU Management</a>
            </li>
            <li>
                <a href="#tabcode" data-toggle="tab">Code</a>
            </li>
            <li>
                <a href="#tabprofile" data-toggle="tab">Profile</a>
            </li>
        </ul>
    </div>
</div>

<div class="row-fluid">
    <div class="span10 offset2">
        <div class="tab-content">
            <div class="tab-pane active" id="tabhome">
                <p>This is your home page!<p>
                <%= link_to "View Friends", "/users/" %>
            </div>
            <div class="tab-pane" id="tabbtu">
                <%= render partial: "/btu/btuList", locals: {user: current_user} %>
            </div>
            <div class="tab-pane" id="tabprofile">
                <%= render partial: "/users/profile", locals: {user: current_user} %>
            </div>
            <div class="tab-pane" id="tabcode">
                <%= render partial: "code/codeList", locals: {user: current_user} %>
            </div>
        </div>
    </div>
</div>
