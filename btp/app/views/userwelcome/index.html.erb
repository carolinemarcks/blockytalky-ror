<div class="row-fluid">
    <div class="span7 offset5">
        <h2>Welcome, <%= current_user.name %>!</h2>
    </div>
</div>
<div class="row-fluid">
    <div class="span6 offset2">
        <ul class="nav nav-pills">
            <li class="active">
                <a href="#tabhome" data-toggle="tab">Home</a>
            </li>
            <li>
                <a href="#tabbtu" data-toggle="tab">BTU Management</a>
            </li>
            <li>
                <a href="#tabcode" data-toggle="tab">Code</a>
            </li>
            <li>
                <a href="#tabprofile" data-toggle="tab">Profile</a>
            </li>
        </ul>
    </div>
</div>

<div class="row-fluid">
    <div class="span10 offset2">
        <div class="tab-content">
            <div class="tab-pane active" id="tabhome">
                <p>This is your home page!<p>
            </div>
            <div class="tab-pane" id="tabbtu">
                <p> This is where your BTU business will be! </p>
            </div>
            <div class="tab-pane" id="tabprofile">
                <p> Account Information </p>
                <p> User Name:     <%= current_user.name %> </p>
                <p> Account Email: <%= current_user.email %> </p>
                <p> School:        <%= current_user.school %> </p>
                <%= link_to 'Update Profile', edit_user_registration_path %>
            </div>
            <div class="tab-pane" id="tabcode">
                <h3><u>View your saved programs and code. Or, make something new!</u></h3> 
		<%# Display each code that the user owns %>
		<table id="codeEntryTable" class="table table-striped table-bordered table-nonfluid">
		<% (0..@user.codes.count).each do |i| %>
            <% if !@user.codes[i].nil? %>
		        <tr>
		            <td>
                        <div id="leftCodeRow">
                            <a href=<%= "/code/" + @user.codes[i].id.to_s %>>
                                <% if @user.codes[i].title.blank? %>
                                    (Unnamed Program)
                                <% else %>
                                    <%= @user.codes[i].title %>
                                <% end %>
                             </a>
                        </div>
                        <div id="rightCodeRow">
                            <a href=<%= "/code/" + @user.codes[i].id.to_s %> type="button" class="btn btn-info">
                                Edit
                            </a>
                            <%= button_to "Delete", {:controller => :userwelcome, :action => 'destroy', 
                                :id => @user.codes[i].id }, :class => 'btn btn-danger', :method => :delete %>
                        </div>
		            </td>
                </tr>
            <% end %>
		<% end %>
		</table>
	   	<a href="/code/new" type="button" class="btn btn-primary">Create New Code</a>
        </div>
        </div>
    </div>
</div>
