<div class="col-md-10">
<h2>Sign up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class => 'form-horizontal'}) do |f| %>

    <%= devise_error_messages! %>
    <div class="form-group">
        <%=f.label :email, :class=> 'col-sm-2'%>
        <div class="col-sm-6">
            <%= f.email_field :email, :autofocus => true, :class => 'form-control'%>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :name, :class => 'col-sm-2' %>
        <div class="col-sm-6">
            <%= f.text_field :name, :class => 'form-control'%>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :school, :class => 'col-sm-2' %>
        <div class="col-sm-6">
            <%= f.text_field :school, :class => 'form-control'%>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :password, :class => 'col-sm-2' %>
        <div class="col-sm-6">
            <%= f.password_field :password, :class => 'form-control'%>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation, :class => 'col-sm-2'%>
        <div class="col-sm-6">
            <%= f.password_field :password_confirmation, :class =>'form-control'%>
        </div>
    </div>
    <div><br/><%= f.submit "Sign up", :class => 'btn btn-primary' %><br/></div>
    <% end %>

<br/>
<%= render "devise/shared/links" %>
</div>
