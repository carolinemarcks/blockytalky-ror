<% if @code.errors.any? %>
    <div class="col-md-10">
        <div id="error_explanation">
            <h2><%= pluralize(@code.errors.count, "error") %> prohibited this code from being saved:</h2>
            <ul>
            <% @code.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
    </div>
<% end %>

    <div class="col-md-10">
        <p>
            <label for="title">Code Title</label><br/>
            <% if @code.title.blank? %>
                <%= f.text_field :title, :placeholder => "Name Your Program" %>
            <% else %>
                <%= f.text_field :title, :value => @code.title %>
            <% end %>
        </p>
    </div>

    <div class="col-md-6">
        <label for="codeDescription">Code Description </label>
        <% if @code.description.blank? %>
          <%= f.text_area :description, :id =>"codeDescription", :placeholder => "Description"%>
        <% else %>
          <%= f.text_area :description, :id =>"codeDescription", :value => @code.description %>
        <% end %>
    </div>

    <div class="form_row">
        <label>Privacy Settings</label>
        <% Code.PRIVACY().each do |privacy| %>
            <br/>
            <%= f.radio_button :privacy, privacy %>
                <%= label :privacy, privacy %>
        <% end %>
        <br/>
    </div>

<% if not @code.live? %>
    <%= f.hidden_field :version_id, value: @code.version.index %>
<% end %>

<div id="codeFormXML">
    <%= f.text_area :codetext, :id =>"xmlText" %>
</div>

