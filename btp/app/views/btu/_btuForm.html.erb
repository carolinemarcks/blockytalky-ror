
<% if @btu.errors.any? %>
        <div class="col-md-10 ">
            <div id="error_explanation">
                <h2><%= pluralize(@btu.errors.count, "error") %> prohibited this btu from being saved:</h2>
                <ul>
                    <% @btu.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
<% end %>
<div class="col-md-10 ">
    <p>
        <% if @btu.title.blank? %>
            <%= f.text_field :title, :id =>"btuTitle", :placeholder => "Name Your Blocky Talky Unit" %>
        <% else %>
            <%= f.text_field :title, :id =>"btuTitle", :value => @btu.title %>
        <% end %>
    </p>
</div>

<div class="col-md-10 ">
    <p>
        <% if @btu.btuID.blank? %>
            <%= f.text_field :btuID, :id =>"btuId", :placeholder => "BTU identifier #" %>
        <% else %>
            <%= f.text_field :btuID, :id =>"btuId", :value => @btu.btuID %>
        <% end %>
    </p>
</div>

<div class="col-md-10 ">
    <div class="row">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary"
                 onclick="saveBtu()">Save your BTU!
            </button>
        </div>
    </div>
</div>

