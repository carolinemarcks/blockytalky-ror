<% provide(:title, "Login") %>
<h1>Login</h1>

<div class="row-fluid">
    <div class="span6 offset3">
        <%= form_tag("/login", method: "post") do %>
            <%= label_tag(:un, "Username:") %>
            <%= text_field_tag(:un) %>
            
            <%= label_tag(:pw, "Password:") %>
            <%= password_field_tag(:pw) %>
            
            <%= submit_tag("Log in") %>
        <% end %>
    </div>
</div>
